<?xml version="1.0" encoding="UTF-8"?>

<configuration>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{dd/MM/yy HH:mm:ss} %-12t %-5p - %-26.26c{1} - %m\n</pattern>
		</encoder>
	</appender>

	<logger name="com.workable.selenium" additivity="false" level="ERROR">
		<appender-ref ref="CONSOLE" />
	</logger>

	<root level="INFO">
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>